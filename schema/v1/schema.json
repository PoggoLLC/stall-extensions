{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Extension Metadata Schema",
  "type": "object",
  "required": [
    "$schema",
    "id",
    "name",
    "description",
    "keywords",
    "icon",
    "version",
    "authors",
    "repo",
    "homepage",
    "offline_ready",
    "entrypoint"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "icon": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "repo": {
      "type": "string",
      "format": "uri"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "entrypoint": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The id of a default index page or group id if lookup is the default starting point"
        },
        "type": {
          "type": "string",
          "enum": ["page", "lookup"]
        }
      },
      "required": ["id", "type"]
    },
    "offline_ready": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
